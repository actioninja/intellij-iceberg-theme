<idea-plugin>
    <id>com.github.milankinen.ideaicebergtheme</id>
    <name>Iceberg</name>
    <vendor>Matti Lankinen</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.milankinen.ideaicebergtheme.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.milankinen.ideaicebergtheme.services.MyProjectService"/>
        <themeProvider id="5b145824-a9e7-494a-9062-b95fd7c3baad" path="/Iceberg.theme.json"/>
    </extensions>

    <projectListeners>
        <listener class="com.github.milankinen.ideaicebergtheme.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>
</idea-plugin>
